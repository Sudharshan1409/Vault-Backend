{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./modules/**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode",
    ".aws-sam",
    "__test__/**/*.test.ts",
    "temp"
  ]
}
